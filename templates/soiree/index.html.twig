{% extends 'base.html.twig' %}

{% block title %}Liste des Soirées{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des soirées</h1>

    <a href="{{ path('soiree_add') }}" class="btn btn-sm btn-primary">Ajouter une soirée</a>
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col">Lieu</th>
            <th scope="col">Date</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>

        <tbody>
        {% for s in soirees %}
        <tr>
            <td>{{ s.id }}</td>
            <td>{{ s.nom }}</td>
            <td>{{ s.lieu }}</td>
            <td>{{ s.date|date('d-m-Y') }}</td>

            <td>
                <a href="{{ path('soiree_entered', {"id":s.id}) }}" class="btn btn-sm btn-success">Entrer dans la soirée</a>
                <a href="{{ path('soiree_delete', {"id":s.id}) }}" class="btn btn-sm btn-danger">Supprimer la soirée</a>
            </td>
        </tr>
        {% endfor %}
        <tbody>
   </table>
</div>
{% endblock %}

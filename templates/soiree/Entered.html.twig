{% extends 'base.html.twig' %}

{% block title %}Liste des Participants à la Soirée{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Liste des Participants à la Soirée</h1>


        <a href="{{ path('participant_add', {"id":idSoiree.id}) }}" class="btn btn-sm btn-primary">Ajouter un participant à la soirée</a>

        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Montant</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>

            <tbody>
            {% for p in listeParticipants %}
                <tr>
                    <td>{{ p.nom }}</td>
                    <td>{{ p.montant}}</td>

                    <td>
                        <a href="{{ path('participant_update',{"id": p.id , "idsoiree":idSoiree.id}) }}" class="btn btn-sm btn-success">Editer le Montant</a>
                       <a href="{{ path('participant_delete',{"id": p.id , "idsoiree":idSoiree.id}) }}" class="btn btn-sm btn-danger">Supprimer le participant</a>
                    </td>
                </tr>
            {% endfor %}
            <tbody>
        </table>
    </div>
{% endblock %}
